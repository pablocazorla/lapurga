---
import Layout from "../layouts/Layout.astro";
import { CldUploadWidget } from "astro-cloudinary";
---

<Layout title="La Purga">
  <main class="main">
    <div class="textbox-container">
      <div class="textbox" id="textbox">
        <span class="textbox-inner"></span><span class="textbox-wait"
          >&nbsp;&nbsp;&nbsp;</span
        >
      </div>
      <button class="textbox textbox-btn" id="textbox-btn">
        <span class="textbox-inner"></span><span class="textbox-wait"></span>
      </button>
    </div>
    <div class="dimmer-full-screen" id="dimmer-full-screen"></div>
  </main>
</Layout>
<style is:global>
  .main {
    width: 100dvw;
    height: 100dvh;
    overflow: hidden;
    display: grid;
    place-content: center;
  }
  .textbox-container {
    text-align: center;
  }
  .textbox {
    text-align: center;
    font-size: 30px;
  }

  .textbox-btn {
    background-color: #000000d2;
    border: none;
    outline: none;
    color: #00d660;
    text-shadow: 0px 1px 4px #00ff737e;
    font-family: "Courier New", Courier, monospace;
    font-weight: bold;
    margin-top: 15px;
    padding: 10px 25px;
    border-radius: 12px;
    cursor: pointer;
    display: none;
  }

  .dimmer-full-screen {
    position: fixed;
    z-index: 2000;
    top: 0;
    left: 0;
    width: 100dvw;
    height: 100dvh;
    cursor: pointer;
  }

  .fade-out {
    animation: fadeOut 1s ease-in-out;
  }

  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>

<script src="/src/js/main.js"></script>
