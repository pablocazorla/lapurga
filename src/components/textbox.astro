---
import { CldUploadWidget } from "astro-cloudinary";
---

<section class="textbox-container">
  <div class="textbox-wrap">
    <p class="textbox" id="textbox">
      <span class="textbox-inner"></span><span class="textbox-wait"
        >&nbsp;&nbsp;&nbsp;</span
      >
    </p>
    <CldUploadWidget
      id="upload-widget"
      uploadPreset="upload-images"
      options={{
        sources: ["local", "camera"],
        multiple: false,
        maxFiles: 1,
        folder: "halloween",
        theme: "purple",
        language: "es",
        styles: {
          frame: {
            background: "#1e003a44",
          },
        },
        text: {
          es: {
            or: "o",
            back: "Volver",
            advanced: "Avanzado",
            close: "Cerrar",
            no_results: "Sin resultados",
            search_placeholder: "Buscar archivos",
            about_uw: "Acerca de Upload Widget",
            local: {
              browse: "Buscar",
              dd_title_single: "Arrastra una imagen aquí",
              dd_title_multi: "Arrastra imágenes aquí",
              drop_title_single: "Arrastra una imagen para subir",
              drop_title_multiple: "Arrastra imágenes para subir",
            },
            menu: {
              files: "Mis Archivos",
            },
          },
        },
      }}
    >
      <button
        class="textbox textbox-btn"
        id="textbox-btn"
        title="Cargar foto"
        aria-label="Cargar foto"
      >
        <span class="textbox-inner"></span><span class="textbox-wait"></span>
      </button>
    </CldUploadWidget>
    <button
      class="textbox textbox-btn"
      id="textbox-btn-download"
      title="Abrir certificado de purga"
      aria-label="Abrir certificado de purga"
    >
      <span class="textbox-inner">Certificado de purga</span>
    </button>
  </div>
</section>

<style>
  .textbox-container {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100dvw;
    height: 100dvh;
    text-align: center;
    display: grid;
    place-content: center;
    overflow: hidden;
  }
  .textbox {
    text-align: center;
    font-size: 30px;
  }
  .textbox-btn {
    background-color: #000000d2;
    border: none;
    outline: none;
    color: #00d660;
    text-shadow: 0px 1px 4px #00ff737e;
    font-family: "Courier New", Courier, monospace;
    font-weight: bold;
    margin-top: 15px;
    padding: 10px 25px;
    border-radius: 12px;
    cursor: pointer;
    display: none;

    &:hover {
      background-color: #0000005d;
    }
  }
  #textbox-btn-download {
    font-size: 16px;
  }
  #textbox-btn-download.show {
    display: inline-block;
    animation: fadeIn 0.4s ease-in-out;
  }
  .fade-out {
    animation: fadeOut 1s ease-in-out;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>
