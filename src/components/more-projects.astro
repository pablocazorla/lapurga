---
import MoreProjectData from "../data/more-project.json";
const range = (start, stop, step) =>
  Array.from({ length: (stop - start) / step + 1 }, (_, i) => start + i * step);
const list = range("A".charCodeAt(0), "Z".charCodeAt(0), 1).map((x) =>
  String.fromCharCode(x)
);
---

<section class="more-projects">
  <button class="more-projects-tab"> MÃ¡s proyectos de la comunidad </button>
  <div class="more-projects-wrap">
    <div class="more-projects-slider">
      <nav class="more-projects-container">
        {
          MoreProjectData.list.map(({ url, img }) => {
            return (
              <a
                href={url}
                class="more-projects-link"
                target="_blank"
                rel="noreferrer noopener"
              >
                <picture class="more-projects-picture">
                  <img
                    src={`/img/more-projects/${img.replace(" ", "-")}.webp`}
                    alt={img}
                  />
                </picture>
                <span class="more-projects-link-text">{img}</span>
              </a>
            );
          })
        }
      </nav>
    </div>
  </div>
</section>

<style>
  .more-projects {
    position: fixed;
    z-index: 2000;
    bottom: -148px;
    left: 0;
    width: 100%;
    height: 148px;
    background-color: #1e003a;
    text-shadow: none;
    transition: bottom 0.7s;
  }
  .more-projects-tab {
    position: absolute;
    top: -24px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #1e003a;
    color: #00d660;
    font-family: "Courier New", Courier, monospace;
    border: none;
    padding: 0 2em;
    font-size: 11px;
    font-weight: bold;
    border-radius: 1em 1em 0 0;
    height: 24px;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.14s;

    &:hover {
      opacity: 1;
    }
  }
  .more-projects.more-projects-show {
    bottom: 0;
    .more-projects-tab {
      opacity: 1;
    }
  }
  .more-projects-wrap {
    position: relative;
    z-index: 5;
    width: 100%;
    height: 148px;
    padding: 14px 14px 0;
    box-shadow: 0px -2px 10px #000;
  }
  .more-projects-slider {
    overflow-x: auto;
    width: 100%;
    height: 148px;
  }
  .more-projects-slider::-webkit-scrollbar {
    width: 10px;
    height: 10px;
    background-color: #0c0018;
  }

  .more-projects-slider::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  }

  .more-projects-slider::-webkit-scrollbar-thumb {
    background-color: #4b0a88;
    outline: none;
  }
  .more-projects-container {
    display: flex;
    //justify-content: center;
    gap: 14px;
  }
  .more-projects-link {
    display: block;
    text-align: center;
    transition: opacity 0.14s;

    &:hover {
      opacity: 0.5;
    }
  }
  .more-projects-picture {
    display: block;
    width: 100px;
    aspect-ratio: 1/1;

    img {
      display: block;
      width: auto;
      height: auto;
      object-fit: cover;
      border-radius: 10px;
      box-shadow: 0 1px 6px rgba(0, 0, 0, 0.6);
    }
  }
  .more-projects-link-text {
    font-size: 11px;
  }
</style>

<script>
  const moreProjects = document.querySelector(".more-projects");
  const moreProjectsTab = document.querySelector(".more-projects-tab");

  moreProjectsTab.addEventListener("click", () => {
    moreProjects.classList.toggle("more-projects-show");
  });
</script>
